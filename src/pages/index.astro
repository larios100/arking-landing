---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import TopProjects from '../components/TopProjects.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import Customers from '../components/Customers.astro';
---

<style>
    .bg-hero {
        background-image: url('/img/home.jpg');
    }
    @keyframes fadein {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
<Layout title="Arking - Diseño y Construcción">
    <header class="bg-white border-b border-black/5 fixed top-0 z-50 w-full glass-effect">
        <div class="w-full mx-auto md:px-12 px-8 max-w-7xl lg:px-16">
            <div
                x-data="{ open: false }"
                class="relative flex flex-col w-full py-5 mx-auto bg-white md:items-center md:justify-between md:flex-row md:px-6"
            >
                <div class="flex flex-row items-center justify-between lg:justify-start">
                    <a href="/" class="text-black inline-flex items-center gap-3">
                        <img src="/logo-simple.png" alt="Arking" class="w-10 h-10" />
                        <span class="font-bold font-display text-sky-900">Arking</span>
                    </a>
                    <button
                        @click="open = !open"
                        class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-black focus:outline-none focus:text-black lg:hidden"
                    >
                        <svg class="w-6 h-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                            <path
                                :class="{'hidden': open, 'inline-flex': !open }"
                                class="inline-flex"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                            <path
                                :class="{'hidden': !open, 'inline-flex': open }"
                                class="hidden"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <nav
                    :class="{'flex': open, 'hidden': !open}"
                    class="flex-col items-center flex-grow hidden md:pb-0 md:flex md:justify-end md:flex-row"
                >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400 lg:ml-auto"
                        href="/#home">Inicio</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#about">Quienes somos</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#services"
                    >
                        Nuestros servicios</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#projects"
                    >
                        Equipo</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#contact"
                    >
                        Contáctanos</a
                    >
                </nav>
            </div>
        </div>
    </header>
    <main id="main-content">
        <Hero />
        <About />
        <TopProjects />
        <Customers />
        <Contact />
    </main>
    <Footer />
</Layout>
