---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import TopProjects from '../components/TopProjects.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import Customers from '../components/Customers.astro';
---

<style>
    .bg-hero {
        background-image: url('/img/home.jpg');
    }
    @keyframes fadein {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
<Layout title="Arking - Diseño y Construcción">
    <header class="border-b border-black/5 fixed top-0 z-50 w-full bg-white backdrop-blur">
        <div class="w-full mx-auto container">
            <div
                class="relative flex flex-col w-full py-5 mx-auto md:items-center md:justify-between md:flex-row"
                id="menu-container"
            >
                <div class="flex flex-row items-center justify-between lg:justify-start">
                    <a href="/" class="text-black inline-flex items-center gap-3">
                        <img src="/logo-simple.png" alt="Arking" class="w-10 h-10" />
                        <span class="font-bold font-display text-sky-900">Arking</span>
                    </a>
                    <button
                        id="menu-toggle"
                        class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-black focus:outline-none focus:text-black lg:hidden"
                        aria-label="Abrir menú"
                    >
                        <svg class="w-6 h-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                            <path
                                id="menu-icon-open"
                                class="inline-flex"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                            <path
                                id="menu-icon-close"
                                class="hidden"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <nav
                    id="main-menu"
                    class="flex-col items-center flex-grow hidden md:pb-0 md:flex md:justify-end md:flex-row"
                >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400 lg:ml-auto"
                        href="/#Home">Inicio</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#About">Quienes somos</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#Customers"
                    >
                        Nuestros clientes</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#Projects"
                    >
                        Proyectos</a
                    >
                    <a
                        class="px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-sky-600 hover:text-accent-400"
                        href="/#Contact"
                    >
                        Contáctanos</a
                    >
                </nav>
            </div>
        </div>
    </header>
    <main id="main-content">
        <Hero />
        <About />
        <TopProjects />
        <Customers />
        <Contact />
    </main>
    <Footer />
    <style>
        .floating-buttons {
            position: fixed;
            bottom: 32px;
            right: 32px;
            z-index: 100;
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        .floating-btn {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            background: #25d366;
            color: white;
            font-size: 10px;
            cursor: pointer;
            transition:
                background 0.2s,
                box-shadow 0.2s;
        }
        .floating-btn svg {
            width: 30px;
        }
        .floating-btn:hover {
            background: #1ebe57;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.18);
        }
        .scroll-top-btn {
            background: #222;
            color: #fff;
            opacity: 0;
            transition: opacity 0.3s;
        }
        .scroll-top-btn.visible {
            opacity: 1;
        }
        @media (max-width: 640px) {
            .floating-buttons {
                right: 16px;
                bottom: 16px;
            }
            .floating-btn {
                width: 44px;
                height: 44px;
                font-size: 1rem;
            }
        }
    </style>

    <div class="floating-buttons">
        <!-- WhatsApp Button -->
        <a
            href="https://wa.me/523124055805"
            target="_blank"
            rel="noopener noreferrer"
            class="floating-btn"
            aria-label="WhatsApp"
            title="Chatea por WhatsApp"
            style="background:#25d366;"
        >
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
